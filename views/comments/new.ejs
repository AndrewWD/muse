<% include ../partials/header %>
<div class="container">
    <div class="row justify-content-center" style="margin-bottom: 30px">
        <div class="col col-auto">
            <h1>Add Your Comment to <%= foundMuseum.name %></h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col col-7 col-md-5 col-lg-4">
            <form action="/museums/<%= foundMuseum._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Comment" name="newComment[text]">
                </div>
                <div class="form-group">
                    <input type="submit" class="form-control btn btn-lg btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>